
FROM python:3.9-slim as build-deps

WORKDIR /usr/src/app
RUN apt-get update && apt-get install -y gcc portaudio19-dev
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
# RUN --mount=type=cache,target=/root/.cache pip install --no-cache-dir

RUN apt update && apt install -y  espeak ffmpeg 
FROM python:3.9-slim

WORKDIR /usr/src/app

COPY --from=build-deps /usr/local /usr/local
COPY . .
